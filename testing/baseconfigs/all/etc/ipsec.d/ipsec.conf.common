	left=192.1.3.209
        leftrsasigkey=%cert
	leftid=%fromcert
        leftcert=road
	# Right security gateway, subnet behind it, next hop toward left.
	rightid=%fromcert
        rightrsasigkey=%cert
	rightcert=east
	rightnexthop=192.1.2.254
	right=192.1.2.23

