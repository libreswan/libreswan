<!--
You can load this machine definition into libvirt using:
	sudo virsh define rise.xml
-->

<domain type='kvm'>
  <name>@@DOMAIN@@</name>
  <memory unit='MiB'>@@MEMORY@@</memory>
  <vcpu>1</vcpu>
  <os>
    <type arch='x86_64'>hvm</type>
    <boot dev='hd'/>
  </os>
  <!--override default of mode=host-model -->
  <cpu mode='host-passthrough'/>
  <features>
    <acpi/>
    <apic/>
  </features>
  <clock offset='utc'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <devices>
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2' cache='writeback'/>
      <source file='@@LOCALDIR@@/@@PREFIX@@@@PLATFORM@@.qcow2'/>
      <target dev='vda' bus='virtio'/>
      <transient shareBacking='yes'/>
    </disk>
    <controller type='usb' index='0'>
    </controller>
    <controller type='virtio-serial' index='0'>
    </controller>
    <!--
	While the BSDs use NFS to mount /testing, Fedora, Alpine, and
	Debian uses p9fs.  Hence keep these mount points.  Include
	/source as it is needed when debugging; and /pool as it is
	used when installing packages.
    -->
    <filesystem type='mount' accessmode='squash'>
      <source dir='@@TESTINGDIR@@'/>
      <target dir='testing'/>
    </filesystem>
    <filesystem type='mount' accessmode='squash'>
      <source dir='@@SOURCEDIR@@'/>
      <target dir='source'/>
    </filesystem>
    <filesystem type='mount' accessmode='squash'>
      <source dir='@@POOLDIR@@'/>
      <target dir='pool'/>
    </filesystem>
    <!-- eth0: RISE-SET -->
    <interface type='bridge'>
      <!-- 12:R:I:S:E:02 -->
      <mac address='12:52:49:53:45:02' />
      <source bridge='@@TEST_PREFIX@@198_18_1' />
      <model type='virtio'/>
    </interface>
    <!-- eth1: RISE-EAST -->
    <interface type='bridge'>
      <!-- 12:R:I:S:E:01 -->
      <mac address='12:52:49:53:45:01' />
      <!-- <source bridge='@@TEST_PREFIX@@198_18_?' /> -->
      <source bridge='@@TEST_PREFIX@@192_0_2' />
      <model type='virtio'/>
    </interface>
    <!-- eth2: dhcp -->
    <interface type='bridge'>
      <source bridge='swandefault'/>
      <model type='virtio'/>
    </interface>
    <!-- -->
    <console type='pty'/>
    <memballoon model='virtio'/>
    <rng model='virtio'>
      <backend model='random'>/dev/urandom</backend>
    </rng>
  </devices>
  <!-- used by p9fs -->
  <seclabel type='static' model='dac' relabel='yes'>
   <label>@@USER@@:@@GROUP@@</label>
   <imagelabel>@@USER@@:@@GROUP@@</imagelabel>
  </seclabel>
</domain>
