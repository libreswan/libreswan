		usage="Usage: ipsec redirect [connectionname] --redirect-to {ip-address,...} \\
		[--ctlsocket ${CTLSOCKET}]"
		shift
		case ${1} in
		    "")
			echo "${usage}" >&2
			exit 2
			;;
		esac
		;;
	    help|--help|-h)
		echo "${usage}"
		exit 0
		;;
	    --config)
		IPSEC_CONF="${2}"
		export IPSEC_CONF
		shift
		shift
		;;
	    --redirect-to)
		redirect_to="${2}"
		shift
		shift
		;;
	    --ctlsocket)
		CTLSOCKET="${2}"
		export CTLSOCKET
		shift
		shift
		;;
	    --dry-run|-n)
		dry_run="echo"
